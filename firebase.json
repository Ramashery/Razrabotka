{
  "hosting": {
    "site": "razrabotka-b61bc",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    
    "cleanUrls": true,
    "trailingSlash": true, 

    "rewrites": [
      // *** ВАЖНОЕ ИСПРАВЛЕНИЕ: Это правило должно идти ПЕРВЫМ! ***
      // Оно явно указывает Firebase отдавать файл sitemap.xml, если он запрошен,
      // предотвращая его перезапись универсальным правилом ниже.
      {
        "source": "/sitemap.xml",
        "destination": "/sitemap.xml"
      },
      // Универсальное правило для всех остальных запросов, которые не соответствуют
      // существующему файлу или папке, перенаправляет на index.html.
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],

    "headers": [
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|svg|png|jpg|webp|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      }
    ]
  }
}
