{
  "hosting": {
    "site": "razrabotka-b61bc",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    
    "cleanUrls": true,
    "trailingSlash": true, 

    "rewrites": [
      {
        "source": "/sitemap.xml",
        "destination": "/sitemap.xml"
      }
      // Правило для index.html удалено, чтобы работала страница 404
    ],

    "headers": [
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          },
          {
            "key": "Content-Type",
            "value": "application/xml"
          }
        ]
      },
      
      {
        "source": "**/*.@(js|css|svg|png|jpg|webp|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=0, must-revalidate"
          }
        ]
      },

      {
        "source": "**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  }
}
